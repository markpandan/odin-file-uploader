generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id       String    @id @default(uuid(7))
  username String    @db.VarChar(255)
  email    String    @db.VarChar(255)
  password String
  Files    Files[]
  Folders  Folders[]

  @@unique([username, email])
}

model Files {
  id   String @id
  name String
  size Int

  parent   Folders? @relation(fields: [parentId], references: [id])
  parentId String?

  owner   Users  @relation(fields: [ownerId], references: [id])
  ownerId String

  to_share Boolean @default(false)
}

model Folders {
  id   String @id @default(uuid(7))
  name String

  parent    Folders?  @relation("ParentChildRelations", fields: [parentId], references: [id])
  parentId  String?   @unique
  childrens Folders[] @relation("ParentChildRelations")

  owner   Users  @relation(fields: [ownerId], references: [id])
  ownerId String

  Files Files[]
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}
